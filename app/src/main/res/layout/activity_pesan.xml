<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue001"
    android:padding="30dp"
    tools:context=".PesanActivity"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Detail Lokasi Parkir"
            android:textAlignment="center"
            android:textColor="@color/blue003"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/parkir_belakang" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Deskripsi :"
            android:textAlignment="textStart"
            android:textColor="@color/blue003"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Parkiran Belakang FILKOM ini terletak di belakang Gedung A dan biasa digunakan oleh mahasiswa."
            android:textAlignment="textStart"
            android:textColor="@color/blue003"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Tanggal:"
            android:textSize="15sp"
            android:textColor="@color/blue003"
            android:fontFamily="@font/poppins_semibold"/>

        <EditText
            android:id="@+id/inpDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_shadow"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:hint="Tanggal"
            android:focusable="false"
            android:minHeight="45dp"
            android:paddingHorizontal="10dp"
            android:textColorHint="@color/blue011"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Waktu:"
            android:textSize="15sp"
            android:textColor="@color/blue003"
            android:fontFamily="@font/poppins_semibold"/>

        <EditText
            android:id="@+id/inpWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_shadow"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:hint="Waktu"
            android:focusable="false"
            android:minHeight="45dp"
            android:paddingHorizontal="10dp"
            android:textColorHint="@color/blue011"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_buttonpesan"/>

</LinearLayout>